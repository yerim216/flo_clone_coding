<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/album_my_type_mix_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 취향 MIX"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp" />


    <ImageView
        android:id="@+id/album_my_type_mix_toggle_iv"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_toggle_off"
       app:layout_constraintStart_toStartOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toEndOf="@id/album_my_type_mix_tv"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toTopOf="@id/album_all_choose_tv"
        android:layout_marginBottom="10dp"
      />

    <TextView
        android:id="@+id/album_all_choose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/album_all_plat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/linearLayout_songlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/album_song_num1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/album_song_name1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라일락"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/album_song_play_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_miniplayer_play"
            android:layout_marginStart="250dp"
            />
        <ImageView
            android:id="@+id/album_song_more_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_songlist2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/album_song_num2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/album_song_name2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flu    "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/album_song_play2_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_miniplayer_play"
            android:layout_marginStart="256dp"
            />
        <ImageView
            android:id="@+id/album_song_more2_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_songlist3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/album_song_num3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/album_song_name3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coin    "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/album_song_play3_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_miniplayer_play"
            android:layout_marginStart="246dp"
            />
        <ImageView
            android:id="@+id/album_song_more3_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_songlist4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/album_song_num4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/album_song_name4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="봄 안녕  "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/album_song_play4_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_miniplayer_play"
            android:layout_marginStart="240dp"
            />
        <ImageView
            android:id="@+id/album_song_more4_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/album_my_type_mix_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp">

        <TextView
            android:id="@+id/album_singer_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/album_singer_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/album_singer_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/album_singer_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>